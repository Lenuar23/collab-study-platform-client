<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.cspclient.controller.RegisterController">
    <top>
        <Label text="Collaborative Study Platform — Реєстрація" BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </BorderPane.margin>
        </Label>
    </top>
    <center>
        <GridPane hgap="10" vgap="10">
            <padding><Insets top="30" right="30" bottom="30" left="30"/></padding>
            <columnConstraints>
                <ColumnConstraints halignment="RIGHT" minWidth="120"/>
                <ColumnConstraints halignment="LEFT" minWidth="250"/>
            </columnConstraints>

            <Label text="Ім'я:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="nameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <Label text="Email:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextField fx:id="emailField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <Label text="Пароль:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <PasswordField fx:id="passwordField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

            <HBox spacing="10" GridPane.rowIndex="3" GridPane.columnIndex="1">
                <Button text="Зареєструватися" onAction="#onRegister"/>
                <Button text="Назад" onAction="#backToLogin"/>
            </HBox>
        </GridPane>
    </center>
</BorderPane>
