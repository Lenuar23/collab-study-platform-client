<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.cspclient.controller.GroupDetailsController">
    <top>
        <ToolBar styleClass="topbar">
            <Button text="⟵ Назад" onAction="#onBack"/>
            <Separator orientation="VERTICAL"/>
            <Label fx:id="groupTitle" text="Група" styleClass="title"/>
            <Pane HBox.hgrow="ALWAYS"/>
            <HBox fx:id="taskButtonsBox" spacing="8">
                <Button text="Додати завдання" onAction="#onAddTask"/>
                <Button text="Змінити статус" onAction="#onChangeStatus"/>
                <Button text="Додати матеріал" onAction="#onAddResource"/>
            </HBox>
        </ToolBar>
    </top>

    <center>
        <SplitPane dividerPositions="0.5">
            <VBox spacing="8">
                <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>
                <Label text="Завдання" styleClass="section-title"/>
                <ListView fx:id="tasksList" VBox.vgrow="ALWAYS"/>
            </VBox>

            <VBox spacing="8">
                <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>
                <Label text="Матеріали" styleClass="section-title"/>
                <ListView fx:id="resourcesList" VBox.vgrow="ALWAYS"/>
            </VBox>
        </SplitPane>
    </center>

    <bottom>
        <VBox spacing="8">
            <padding><Insets top="0" right="10" bottom="10" left="10"/></padding>
            <Label text="Активність" styleClass="section-title"/>
            <ListView fx:id="activityList" VBox.vgrow="ALWAYS"/>
        </VBox>
    </bottom>
</BorderPane>
