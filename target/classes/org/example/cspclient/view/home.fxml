<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.cspclient.controller.HomeController">
    <top>
        <ToolBar styleClass="topbar">
            <HBox spacing="8" alignment="CENTER_LEFT">
                <ImageView fitHeight="18" fitWidth="18" preserveRatio="true">
                    <image>
                        <Image url="@../icon.png" />
                    </image>
                </ImageView>
                <Label text="Collaborative Study Platform" styleClass="title"/>
            </HBox>
            <Pane HBox.hgrow="ALWAYS"/>
            <Button text="Settings" onAction="#openUserSettings" styleClass="btn-secondary"/>
            <Button text="Log out" onAction="#onLogout" styleClass="btn-secondary"/>
        </ToolBar>
    </top>

    <center>
        <TabPane fx:id="tabs" tabClosingPolicy="UNAVAILABLE">
            <Tab text="Chats">
                <content>
                    <fx:include source="chat_embedded.fxml"/>
                </content>
            </Tab>
            <Tab text="Groups">
                <content>
                    <fx:include source="groups.fxml"/>
                </content>
            </Tab>
        </TabPane>
    </center>
</BorderPane>
