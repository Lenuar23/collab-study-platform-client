<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<StackPane xmlns:fx="http://javafx.com/fxml" styleClass="auth-root" fx:controller="org.example.cspclient.controller.LoginController">
    <children>
        <VBox alignment="CENTER" spacing="16" StackPane.alignment="CENTER">
            <HBox alignment="CENTER" spacing="10">
                <ImageView fitWidth="44" fitHeight="44" preserveRatio="true">
                    <image>
                        <Image url="@../icon.png" />
                    </image>
                </ImageView>
                <Label text="Collaborative Study Platform" styleClass="title"/>
            </HBox>
            <VBox alignment="CENTER" styleClass="auth-card" spacing="14" maxWidth="520">
                <Label text="Sign in" styleClass="card-title"/>
                <GridPane hgap="12" vgap="12">
                    <columnConstraints>
                        <ColumnConstraints halignment="RIGHT" minWidth="120"/>
                        <ColumnConstraints halignment="LEFT" minWidth="320" hgrow="ALWAYS"/>
                    </columnConstraints>
                    <Label text="Email:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                    <TextField fx:id="emailField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
                    <Label text="Password:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                    <PasswordField fx:id="passwordField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
                    <HBox spacing="10" alignment="CENTER_LEFT" GridPane.rowIndex="2" GridPane.columnIndex="1">
                        <Button text="Sign in" onAction="#onLogin" styleClass="btn-primary"/>
                        <Button text="Sign up" onAction="#goToRegister" styleClass="btn-secondary"/>
                    </HBox>
                </GridPane>
            </VBox>
            <Label text="Â© 2025 CSP" styleClass="brand-footnote"/>
        </VBox>
    </children>
</StackPane>
