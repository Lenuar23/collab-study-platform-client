<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.cspclient.controller.DashboardController">
    <top>
        <ToolBar styleClass="topbar">
            <Label fx:id="welcomeLabel" text="Вітаю" styleClass="title"/>
            <Pane HBox.hgrow="ALWAYS"/>
            <Button text="Чати" onAction="#openChats"/>
            <Button text="Вийти" onAction="#onLogout"/>
        </ToolBar>
    </top>

    <center>
        <VBox spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Мої групи" styleClass="section-title"/>
                <Button text="Створити групу" onAction="#onCreateGroup"/>
                <Button text="Відкрити" onAction="#onOpenSelected"/>
            </HBox>

            <ListView fx:id="groupsList" VBox.vgrow="ALWAYS"/>
        </VBox>
    </center>
</BorderPane>
