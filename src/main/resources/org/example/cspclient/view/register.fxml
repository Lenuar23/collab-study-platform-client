<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane xmlns:fx="http://javafx.com/fxml" styleClass="auth-root" fx:controller="org.example.cspclient.controller.RegisterController">
    <children>
        <!-- Center this VBox inside StackPane explicitly -->
        <VBox alignment="CENTER" spacing="20" StackPane.alignment="CENTER">
            <Label text="Collaborative Study Platform" styleClass="brand-title"/>
            <VBox alignment="CENTER" styleClass="auth-card" spacing="14" maxWidth="520">
                <Label text="Реєстрація" styleClass="card-title"/>
                <GridPane hgap="12" vgap="12">
                    <columnConstraints>
                        <ColumnConstraints halignment="RIGHT" minWidth="120"/>
                        <ColumnConstraints halignment="LEFT" minWidth="320" hgrow="ALWAYS"/>
                    </columnConstraints>

                    <Label text="Ім'я:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                    <TextField fx:id="nameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                    <Label text="Email:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                    <TextField fx:id="emailField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                    <Label text="Пароль:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                    <PasswordField fx:id="passwordField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                    <!-- Buttons aligned under inputs -->
                    <HBox spacing="10" alignment="CENTER_LEFT" GridPane.rowIndex="3" GridPane.columnIndex="1">
                        <Button text="Зареєструватися" onAction="#onRegister"/>
                        <Button text="Назад" onAction="#backToLogin"/>
                    </HBox>
                </GridPane>
            </VBox>
            <Label text="© 2025 CSP" styleClass="brand-footnote"/>
        </VBox>
    </children>
</StackPane>
